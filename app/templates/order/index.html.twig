{% extends 'admin.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1 class="h1 text-center my-3">Заказы</h1>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>адрес</th>
                <th>email</th>
                {% if status == 1 %}
                    <th><a href="/order?filter=true" style="color: #212529">статус</a></th>
                {% endif %}
                {% if status == 2 %}
                    <th><a href="/order?filter=false" style="color: #212529">статус (активные)</a></th>
                {% endif %}
                {% if status == 3 %}
                    <th><a href="/order" style="color: #212529">статус (выполненные)</a></th>
                {% endif %}
                <th>дата</th>
                <th>действия</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.address }}</td>
                <td>{{ order.user.email }}</td>
                <td>{{ order.status.name }}</td>
                <td>{{ order.date |date('d-M-Y H:i:s') }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': order.id}) }}">Подробнее</a>
                    {% if order.status.sort < 4 %}
                        <a href="{{ path('order_edit', {'id': order.id}) }}">Редактировать</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
